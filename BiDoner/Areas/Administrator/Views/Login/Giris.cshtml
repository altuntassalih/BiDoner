</head>
<body class="authentication-body">
    <div class="container-fluid">
        <div class="authentication-header m-b-30">
            <div class="clearfix">
                <div class="pull-left">
                    <a class="authentication-logo" href="#">
                        <img src="~/Areas/Administrator/Content/img/logo.png" alt="" height="25">
                        <span>cosmos</span>
                    </a>
                </div>
          
            </div>
        </div>
        <div class="row">
            <div class="col-sm-4 col-sm-offset-4">
                <div class="authentication-content m-b-30">
                    <h3 class="m-t-0 m-b-30 text-center">BiKofteBiDoner Admin Paneli</h3>
                    @using (Html.BeginForm("Giris", "Login", FormMethod.Post, new { @name = "LoginForm", @id = "LoginForm" }))
                    {
                       
                            @Html.ValidationSummary()
                        
                        <div class="form-group">
                            <label for="form-control-1">Kullanıcı Adı</label>
                            <input type="text" class="form-control" name="UserName" id="UserName" placeholder="Kullanıcı Adı">
                        </div>
                        <div class="form-group">
                            <label for="form-control-2">Şifre</label>
                            <input type="Password" class="form-control" name="Password" id="Password" placeholder="Şifre">
                        </div>

                        <button type="submit" class="btn btn-success btn-block">Giriş</button>
                    }
                </div>
            </div>
        </div>
        <div class="authentication-footer">
            <span class="text-muted">Designed by Salih Altuntaş</span>
        </div>
    </div>
    <script src="~/Areas/Administrator/Content/js/vendor.min.js"></script>
    <script src="~/Areas/Administrator/Content/js/cosmos.min.js"></script>
    <script src="~/Areas/Administrator/Content/js/application.min.js"></script>

</body>

</html>